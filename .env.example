# ==================== LLM Configuration ====================
# Get your API key from https://console.groq.com
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GROQ_LLM_MODEL=llama-3.3-70b-versatile
# Other options: llama-3.1-8b-instant, mixtral-8x7b-32768

# ==================== Zerodha Configuration ====================
# Get credentials from https://kite.zerodha.com
# API Key: Create new app from Zerodha Developer Console
ZERODHA_API_KEY=xxxxxxxxxxxxxx

# Secret Key: Generated when you create the app
ZERODHA_SECRET_KEY=xxxxxxxxxxxxxx

# Request Token URL: Use this to get auth code
REQUEST_TOKEN_FROM_URL=https://kite.zerodha.com/connect/login?v=3&api_key=YOUR_API_KEY

# Access Token: Obtained after successful authentication
ZERODHA_ACCESS_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================== Application Configuration ====================
# Enable/disable debug mode
DEBUG=True

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Application environment
ENVIRONMENT=development

# API Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2

# File Upload Configuration
UPLOAD_FOLDER=./uploads
ALLOWED_FILE_TYPES=pdf,csv
MAX_FILE_SIZE=10485760  # 10MB in bytes

# ==================== Server Configuration ====================
# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ==================== Trading Configuration ====================
# Mode: simulation (for testing), production (for real trading)
TRADING_MODE=simulation

# Default allocation percentages
EQUITY_ALLOCATION=60
DEBT_ALLOCATION=30
GOLD_ALLOCATION=10

# ==================== Email Notifications (Optional) ====================
# Enable email alerts for trade execution
ENABLE_EMAIL_ALERTS=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-app-password